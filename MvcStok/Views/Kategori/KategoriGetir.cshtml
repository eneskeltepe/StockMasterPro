@model MvcStok.Models.Entity.TBLKATEGORILER
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group mt-2">
        @Html.HiddenFor(x => x.KATEGORIID)
        <label>Kategori ID: @Model.KATEGORIID</label>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.KATEGORIAD, "Kategori Adı")
        @Html.TextBoxFor(x => x.KATEGORIAD, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success">Kategori Bilgilerini Güncelle</button>
    </div>
}