@model MvcStok.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
{
    <div class="form-group mt-2">
        @Html.HiddenFor(x => x.URUNID)
        <label>Ürün ID: @Model.URUNID</label>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.URUNAD, "Ürün Adı")
        @Html.TextBoxFor(x => x.URUNAD, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.MARKA, "Marka")
        @Html.TextBoxFor(x => x.MARKA, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.URUNKATEGORI, "Kategori")
        @Html.DropDownListFor(x => x.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.FIYAT, "Fiyat")
        @Html.TextBoxFor(x => x.FIYAT, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.STOK, "Stok")
        @Html.TextBoxFor(x => x.STOK, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-success">Ürün Bilgilerini Güncelle</button>
    </div>
}